{
  "name": "danger-plugin-prettier",
  "description": "Check if code was prettier-formatted",
  "author": {
    "name": "Franciszek Madej",
    "email": "franek@alergeek.ventures"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kosciak9/danger-plugin-prettier.git"
  },
  "bugs": {
    "url": "https://github.com/kosciak9/danger-plugin-prettier/issues"
  },
  "homepage": "https://github.com/kosciak9/danger-plugin-prettier#readme",
  "keywords": [
    "danger",
    "danger-plugin",
    "prettier"
  ],
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "build": "tsc",
    "test": "jest",
    "predocs": "rm -rf docs/",
    "docs": "esdoc -c .esdoc.json",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "prettier": "prettier",
    "prettier-write": "npm run prettier -- --parser typescript --no-semi --trailing-comma es5 --write --print-width 120",
    "prettier-project": "npm run prettier-write -- 'src/**/*.{ts,tsx}'",
    "lint": "tslint \"src/**/*.ts\""
  },
  "license": "MIT",
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "danger": "*",
    "husky": "^7.0.4",
    "jest": "^28.0.3",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "semantic-release": "^19.0.2",
    "ts-jest": "^28.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.6.4",
    "validate-commit-msg": "^2.12.1"
  },
  "optionalDependencies": {
    "esdoc": "^1.1.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "tslint --fix",
      "npm run prettier-write --",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ]
  }
}
